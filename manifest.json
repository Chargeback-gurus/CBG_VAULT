{
  "manifest_version": 3,

  "name": "CBG-VAULT",
  "description": "This extension will allow users to login to vena accounts",
  "version": "1.0",

  "action": {
     "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ],
  "background": {
    "service_worker":"background.js",
    "type": "module"
},
  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab", 
    "scripting",
    "cookies",
    "notifications"

  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
 

  ]
}