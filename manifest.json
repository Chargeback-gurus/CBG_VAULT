{
  "manifest_version": 3,

  "name": "CBG-VAULT",
  "description": "This extension will allow users to login to vena accounts",
  "version": "1.0",

  "action": {
     "default_popup": "popup.html",
     "default_icon": {
      "1024": "/assets/CBG_logo.png",
      "128": "/assets/CBG_logo.png",
      "16": "/assets/CBG_logo.png",
      "256": "/assets/CBG_logo.png",
      "32": "/assets/CBG_logo.png",
      "48": "/assets/CBG_logo.png",
      "512": "/assets/CBG_logo.png",
      "64": "/assets/CBG_logo.png"
   }
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ],
  "background": {
    "service_worker":"background.js"
},
  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab", 
    "scripting",
    "cookies",
    "notifications",
    "storage", 
    "webNavigation",
    "management"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [ {
    "matches": [  "http://*/*","https://*/*"],
    "resources": [ "/popup.html" ]
 }, {
    "matches": [ "http://*/*", "https://*/*" ],
    "resources": [ "/images/web_access/*", "/html/tab/*" ],
    "use_dynamic_url": true
 } ]

}